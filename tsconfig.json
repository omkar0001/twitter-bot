{
  "compileOnSave": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowJs": true,
    "target": "es6",
    "esModuleInterop": true,
    "module": "commonjs",
    "lib": [
      "dom",
      "es6",
      "es2016",
      "es2018.promise"
    ],
    "types": ["node"],
    "noEmitOnError": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*", "test.js", "temp.js", "tests/test.spec.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
